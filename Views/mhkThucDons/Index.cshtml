@model IEnumerable<MHKCafe.Models.ThucDon>

@{
    ViewData["Title"] = "Thực Đơn";
}

<h1 class="mb-4 text-center fw-bold">@ViewData["Title"]</h1>

<p class="text-end mb-4">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm món
    </a>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <!-- Hình ảnh -->
                @if (!string.IsNullOrEmpty(item.HinhAnh))
                {
                    <img src="@item.HinhAnh" class="card-img-top img-fluid" alt="@item.TenMon" style="height:200px;object-fit:cover;" />
                }
                else
                {
                    <img src="~/images" class="card-img-top img-fluid" alt="No image" style="height:200px;object-fit:cover;" />
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@item.TenMon</h5>
                    <p class="card-text text-muted mb-2">@item.MoTa</p>
                    <p class="card-text fw-bold text-danger mb-3">
                        @String.Format("{0:N0} ₫", item.Gia)
                    </p>
                    <span class="badge @(item.TrangThai == true ? "bg-success" : "bg-secondary")">
                        @(item.TrangThai == true ? "Còn bán" : "Hết hàng")
                    </span>
                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-info text-white">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-danger">Xóa</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
