@model IEnumerable<MHKCafe.Models.ThucDon>

@{
    ViewData["Title"] = "Thực Đơn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-cup-hot-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm món
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-emoji-frown"></i> Hiện chưa có món nào trong thực đơn.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                        <!-- Hình ảnh món -->
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@item.HinhAnh" alt="@item.TenMon"
                                 class="card-img-top img-fluid"
                                 style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/images/no-image.png" alt="No image"
                                 class="card-img-top img-fluid bg-light"
                                 style="height: 220px; object-fit: cover;">
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark text-center">@item.TenMon</h5>
                            <p class="card-text text-muted small text-center">@item.MoTa</p>

                            <p class="text-danger fw-bold text-center mb-2">
                                @String.Format("{0:N0} ₫", item.Gia)
                            </p>

                            <div class="text-center mb-3">
                                <span class="badge @(item.TrangThai == true ? "bg-success" : "bg-secondary") px-3 py-2">
                                    @(item.TrangThai == true ? "Còn bán" : "Hết hàng")
                                </span>
                            </div>

                            <div class="mt-auto d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ThucDonId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>

                            <!-- Nút thêm vào giỏ hàng -->
                            <button class="btn btn-primary w-100 mt-3 add-to-cart"
                                    data-id="@item.ThucDonId"
                                    data-name="@item.TenMon"
                                    data-price="@item.Gia"
                                    data-image="@item.HinhAnh"
                                    @(item.TrangThai == true ? "" : "disabled")>
                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- Thư viện SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var btn = $(this);
                $.ajax({
                    url: '/mhkCart/AddToCart',
                    type: 'POST',
                    data: {
                        productId: btn.data('id'),
                        productName: btn.data('name'),
                        price: btn.data('price'),
                        imageUrl: btn.data('image')
                    },
                    success: function (res) {
                        if (res.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Đã thêm vào giỏ hàng!',
                                showConfirmButton: false,
                                timer: 1200
                            });
                            $("#cart-count").text(res.totalItems);
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Không thể thêm vào giỏ hàng',
                            text: 'Vui lòng thử lại sau.'
                        });
                    }
                });
            });
        });
    </script>
}

<!-- Hiệu ứng hover -->
<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        }

    .add-to-cart {
        transition: all 0.2s ease;
    }

        .add-to-cart:hover {
            background-color: #0d6efd;
            transform: scale(1.02);
        }
</style>
