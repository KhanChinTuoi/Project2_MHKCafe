@model MHKCafe.Models.ThucDon

@{
    ViewData["Title"] = "Thêm món mới";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Thêm món mới</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <label asp-for="TenMon" class="form-label fw-semibold"></label>
                    <input asp-for="TenMon" class="form-control" placeholder="Nhập tên món..." />
                    <span asp-validation-for="TenMon" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Gia" class="form-label fw-semibold"></label>
                    <input asp-for="Gia" class="form-control" type="number" step="1000" placeholder="Giá (VNĐ)" />
                    <span asp-validation-for="Gia" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="MoTa" class="form-label fw-semibold"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Mô tả món..."></textarea>
                    <span asp-validation-for="MoTa" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="HinhAnh" class="form-label fw-semibold"></label>
                    <input asp-for="HinhAnh" class="form-control" placeholder="Đường dẫn hoặc URL hình ảnh" />
                    <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="true">Còn bán</option>
                        <option value="false">Hết hàng</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger small"></span>
                </div>

                <div class="col-12 text-end mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu món
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
