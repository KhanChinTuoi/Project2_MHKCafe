@model MHKCafe.Models.ThucDon

@{
    ViewData["Title"] = "Chi tiết món";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Chi tiết món</h4>
        </div>

        <div class="card-body row g-4">
            <!-- Cột hình ảnh -->
            <div class="col-md-5 text-center">
                <img src="@Model.HinhAnh"
                     alt="@Model.TenMon"
                     class="img-fluid rounded shadow-sm border"
                     style="max-height: 280px; object-fit: cover;" />
            </div>

            <!-- Cột thông tin -->
            <div class="col-md-7">
                <h3 class="fw-bold">@Model.TenMon</h3>
                <p class="text-muted mb-3">@Model.MoTa</p>

                <h5 class="text-danger fw-semibold mb-3">
                    <i class="bi bi-currency-dollar"></i>
                    @String.Format("{0:N0} VNĐ", Model.Gia)
                </h5>

                <p class="mb-3">
                    <span class="badge @(Model.TrangThai == true ? "bg-success" : "bg-secondary") fs-6 px-3 py-2">
                        @(Model.TrangThai == true ? "Còn bán" : "Hết hàng")
                    </span>
                </p>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.ThucDonId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
