@model IEnumerable<MHKCafe.Models.BlogPost>
@{
    ViewData["Title"] = "Tin tức thị trường cà phê";
}

<div class="container py-5">
    <h2 class="text-center text-primary mb-4">☕ Tin Tức Thị Trường Cà Phê</h2>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                    <img src="@post.HinhAnh" class="card-img-top" alt="@post.TieuDe">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@post.TieuDe</h5>
                        <p class="card-text text-muted small">@post.NgayDang</p>
                        <p class="card-text flex-grow-1">@post.MoTa</p>
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@post.Id"
                           class="btn btn-outline-primary w-100 mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", sans-serif;
    }

    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
    }
</style>
