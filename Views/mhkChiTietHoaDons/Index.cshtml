@model IEnumerable<MHKCafe.Models.ChiTietHoaDon>

@{
    ViewData["Title"] = "Chi Tiết Hoá Đơn";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-list-ul"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm chi tiết
        </a>
    </div>

    <!-- Bảng -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm mb-0">
                    <i class="bi bi-info-circle"></i> Chưa có chi tiết hoá đơn nào.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                            <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                            <th>@Html.DisplayNameFor(model => model.ThanhTien)</th>
                            <th>Hoá đơn</th>
                            <th>Món ăn</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SoLuong</td>
                                <td>@String.Format("{0:N0} ₫", item.DonGia)</td>
                                <td class="fw-bold text-success">@String.Format("{0:N0} ₫", item.ThanhTien)</td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        #@item.HoaDon?.HoaDonId
                                    </span>
                                </td>
                                <td>@item.ThucDon?.TenMon</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.ChiTietId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ChiTietId" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ChiTietId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<!-- Bootstrap icons (chèn vào _Layout.cshtml nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- Hiệu ứng hover nhẹ -->
<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        }
</style>
