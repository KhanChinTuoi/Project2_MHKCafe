@using MHKCafe.Models.ViewModels
@model ShoppingCart

@{
    ViewData["Title"] = "Giỏ Hàng";
}

<div class="container mt-4">
    <h2>Giỏ Hàng</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <p>Giỏ hàng của bạn đang trống</p>
            <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item row mb-3 pb-3 border-bottom">
                                <div class="col-3">
                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid">
                                </div>
                                <div class="col-6">
                                    <h5>@item.ProductName</h5>
                                    <p class="text-muted">@item.Price.ToString("N0") ₫</p>
                                </div>
                                <div class="col-3">
                                    <div class="quantity-controls input-group">
                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="updateQuantity(@item.ProductId, @item.Quantity - 1)">
                                            -
                                        </button>
                                        <input type="number" class="form-control form-control-sm text-center"
                                               value="@item.Quantity" min="1"
                                               onchange="updateQuantity(@item.ProductId, this.value)">
                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="updateQuantity(@item.ProductId, @item.Quantity + 1)">
                                            +
                                        </button>
                                    </div>
                                    <button class="btn btn-danger btn-sm mt-2"
                                            onclick="removeItem(@item.ProductId)">
                                        Xóa
                                    </button>
                                </div>
                                <div class="col-12 text-end">
                                    <strong>Thành tiền: @item.Total.ToString("N0") ₫</strong>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Tổng Cộng</h5>
                        <div class="d-flex justify-content-between">
                            <span>Tổng tiền:</span>
                            <strong id="grand-total">@Model.GrandTotal.ToString("N0") ₫</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Số lượng:</span>
                            <strong id="total-items">@Model.TotalItems sản phẩm</strong>
                        </div>
                        <hr>
                        <a href="@Url.Action("Checkout", "Order")" class="btn btn-success w-100">
                            Thanh Toán
                        </a>
                        <button onclick="clearCart()" class="btn btn-outline-secondary w-100 mt-2">
                            Xóa Giỏ Hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(productId, quantity) {
            if (quantity < 1) quantity = 1;

            $.post('/MhkCart/UpdateQuantity', {
                productId: productId,
                quantity: quantity
            }, function(data) {
                if (data.success) {
                    location.reload();
                }
            });
        }

        function removeItem(productId) {
            if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                $.post('/MhkCart/RemoveItem', {
                    productId: productId
                }, function(data) {
                    if (data.success) {
                        location.reload();
                    }
                });
            }
        }

        function clearCart() {
            if (confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')) {
                $.post('/MhkCart/ClearCart', function() {
                    location.reload();
                });
            }
        }
    </script>
}