@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body py-5">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            <h2 class="mt-3 text-success fw-bold">Đặt hàng thành công!</h2>
            <p class="mt-3 fs-5">
                Cảm ơn bạn đã mua hàng tại <strong>MHKCafe!</strong>.
            </p>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3 fs-6">
                    @TempData["Message"]
                </div>
            }

            <p class="text-muted mt-2">
                Chúng tôi sẽ liên hệ với bạn để xác nhận đơn hàng sớm nhất.
            </p>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                    <i class="bi bi-house-door-fill"></i> Quay về trang chủ
                </a>

            </div>
        </div>
    </div>
</div>
