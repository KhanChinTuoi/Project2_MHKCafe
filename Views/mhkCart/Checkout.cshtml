@model List<MHKCafe.Models.ViewModels.CartItem>

@{
    ViewData["Title"] = "Xác nhận thanh toán";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4 text-center text-primary">
        <i class="bi bi-cart-check-fill"></i> Xác nhận thanh toán
    </h2>

    <div class="row g-4">
        <!-- Thông tin khách hàng -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-person-circle"></i> Thông tin khách hàng
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Message</div>
                    }

                    <form method="post" asp-action="Checkout">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Họ tên</label>
                            <input type="text" name="hoTen" class="form-control" value="@ViewBag.HoTen" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="email" name="email" class="form-control" value="@ViewBag.Email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Số điện thoại</label>
                            <input type="text" name="soDienThoai" class="form-control" value="@ViewBag.SoDienThoai" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Địa chỉ giao hàng</label>
                            <textarea name="diaChi" class="form-control" rows="3" required>@ViewBag.DiaChi</textarea>
                        </div>

                        <!-- Giữ lại dữ liệu giỏ hàng -->
                        @foreach (var item in Model)
                        {
                            <input type="hidden" name="cartItems[@item.ProductId].TenSp" value="@item.ProductName" />
                            <input type="hidden" name="cartItems[@item.ProductId].SoLuong" value="@item.Quantity" />
                            <input type="hidden" name="cartItems[@item.ProductId].DonGia" value="@item.Price" />
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại giỏ hàng
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-credit-card-fill"></i> Xác nhận đặt hàng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tóm tắt đơn hàng -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-receipt"></i> Tóm tắt đơn hàng
                </div>
                <div class="card-body">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">@item.ProductName</span>
                                        <small class="text-muted">x @item.Quantity</small>
                                    </td>
                                    <td class="text-end">@item.Price.ToString("N0") đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tổng cộng</th>
                                <th class="text-end text-danger fs-5">@ViewBag.Total.ToString("N0") đ</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
