@model IEnumerable<MHKCafe.Models.Admin>

@{
    ViewData["Title"] = "Quản lý Admin";
}

<div class="container mt-4">
    <!-- Tiêu đề + nút -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-shield-lock-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus"></i> Thêm Admin
        </a>
    </div>

    <!-- Nội dung -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm mb-0">
                    <i class="bi bi-info-circle"></i> Hiện chưa có tài khoản quản trị nào.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.MatKhau)</th>
                            <th>@Html.DisplayNameFor(model => model.Quyen)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.HoTen</td>
                                <td>@item.Email</td>
                                <td>
                                    <span class="text-muted fst-italic">••••••••</span>
                                </td>
                                <td>
                                    @if (item.Quyen?.ToLower() == "admin")
                                    {
                                        <span class="badge bg-danger text-white">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Quyen</span>
                                    }
                                </td>
                                <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- CSS nhỏ tăng hiệu ứng -->
<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    }
    .table td, .table th {
        vertical-align: middle;
    }
</style>
