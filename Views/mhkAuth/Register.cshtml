@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center mb-4">
    <h4 class="fw-bold">Đăng ký tài khoản</h4>
    <p class="text-muted">Tạo tài khoản mới để bắt đầu</p>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" asp-action="Register">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="hoTen" class="form-label">Họ và tên *</label>
        <input type="text" class="form-control" id="hoTen" name="hoTen" required
               placeholder="Nhập họ và tên" value="@ViewBag.HoTen">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email *</label>
        <input type="email" class="form-control" id="email" name="email" required
               placeholder="Nhập email" value="@ViewBag.Email">
    </div>

    <div class="mb-3">
        <label for="matKhau" class="form-label">Mật khẩu *</label>
        <input type="password" class="form-control" id="matKhau" name="matKhau" required
               placeholder="Nhập mật khẩu (ít nhất 6 ký tự)">
    </div>

    <div class="mb-3">
        <label for="xacNhanMatKhau" class="form-label">Xác nhận mật khẩu *</label>
        <input type="password" class="form-control" id="xacNhanMatKhau" name="xacNhanMatKhau" required
               placeholder="Nhập lại mật khẩu">
    </div>

    <div class="mb-3">
        <label for="quyen" class="form-label">Quyền</label>
        <select class="form-control" id="quyen" name="quyen">
            <option value="User">User</option>
            <option value="Manager">Manager</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary w-100 mb-3">
        <i class="bi bi-person-plus"></i> Đăng ký
    </button>

    <div class="text-center">
        <a href="@Url.Action("Login")" class="text-decoration-none">
            <i class="bi bi-arrow-left"></i> Đã có tài khoản? Đăng nhập ngay
        </a>
    </div>
</form>